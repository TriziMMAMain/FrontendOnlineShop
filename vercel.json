{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "optimize": {
          "include": [
            "@vue/runtime-core",
            "@vue/compiler-sfc",
            "vue",
            "lodash"
          ]
        },
        "devCommand": "yarn dev",
        "buildCommand": "yarn build"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/files", "dest": "/api/files.js" }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "public": true
}