{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "optimize": {
          "include": [
            "@vue/runtime-core",
            "@vue/compiler-sfc",
            "vue",
            "lodash"
          ]
        },
        "devCommand": "yarn dev",
        "buildCommand": "yarn build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/sitemap.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "/robots.txt"
    }
  ],
  "static": {
    "include": [
      "**/*.xml",
      "**/*.txt"
    ]
  }
}